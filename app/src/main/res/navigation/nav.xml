<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/userLoginFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.pm.troflib.fragments.list.ListFragment"
        android:label="Book List"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/action_listFragment_to_userLoginFragment"
            app:destination="@id/userLoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.pm.troflib.fragments.add.AddFragment"
        android:label="Add Book"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.pm.troflib.fragments.update.UpdateFragment"
        android:label="Update Book">
        <action
            android:id="@+id/action_updateFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentBook"
            app:argType="com.pm.troflib.data.entities.Book" />
    </fragment>
    <fragment
        android:id="@+id/booksListFragment"
        android:name="com.pm.troflib.fragments.book_list.BooksListFragment"
        android:label="@string/books_list"
        tools:layout="@layout/fragment_books_list">
        <action
            android:id="@+id/action_booksListFragment_to_userLoginFragment"
            app:destination="@id/userLoginFragment" />
        <action
            android:id="@+id/action_booksListFragment_to_updateBookFragment"
            app:destination="@id/updateBookFragment" />
        <action
            android:id="@+id/action_booksListFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/userLoginFragment"
        android:name="com.pm.troflib.fragments.login.UserLoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_user_login">
        <action
            android:id="@+id/action_userLoginFragment_to_booksListFragment"
            app:destination="@id/booksListFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateBookFragment"
        android:name="com.pm.troflib.fragments.update_book.UpdateBookFragment"
        android:label="@string/update_book"
        tools:layout="@layout/fragment_update_book">
        <action
            android:id="@+id/action_updateBookFragment_to_booksListFragment"
            app:destination="@id/booksListFragment" />
        <argument
            android:name="currentBook"
            app:argType="com.pm.troflib.api.models.Book" />
        <action
            android:id="@+id/action_updateBookFragment_to_userLoginFragment"
            app:destination="@id/userLoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.pm.troflib.fragments.book.add.AddBookFragment"
        android:label="@string/add_book"
        tools:layout="@layout/fragment_add_book">
        <action
            android:id="@+id/action_addBookFragment_to_booksListFragment"
            app:destination="@id/booksListFragment" />
        <action
            android:id="@+id/action_addBookFragment_to_userLoginFragment"
            app:destination="@id/userLoginFragment" />
    </fragment>
</navigation>